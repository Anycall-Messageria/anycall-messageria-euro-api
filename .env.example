# Pool de Conexões WhatsApp
MAX_SESSIONS=50

# Configurações de Performance
STATUS_CHECK_INTERVAL=60000  # Intervalo de verificação de status (ms) - padrão: 60 segundos
DEBOUNCE_DELAY=5000         # Delay do debounce para status updates (ms) - padrão: 5 segundos

# Circuit Breaker para Reconexões
CIRCUIT_BREAKER_THRESHOLD=5     # Número de falhas antes de abrir circuito - padrão: 5
CIRCUIT_BREAKER_TIMEOUT=60000   # Timeout para cada tentativa (ms) - padrão: 60 segundos
CIRCUIT_BREAKER_RESET=300000    # Tempo para tentar fechar circuito (ms) - padrão: 5 minutos

# Queue de Processamento de Mídia
REDIS_HOST=localhost            # Host do Redis para filas
PASSWORD_REDIS=                 # Senha do Redis (opcional)

# Outras configurações...